extends layout

block content
  h1= title
  if !user
    p You are not logged in.
  else if user.admin && user.admin==true
    p You are already an admin.
  else if message
    p= message
    script.
      setTimeout(function() {
        window.location = '/';
      }, #{delay} * 1000);
  else
    form(action="" method="POST")
      label(for="password") Enter Password to Become an Admin:
      input(type="password" name="password")
      button(type="submit") Submit

    if errors
      ul
        for error in errors
          li!= error.msg
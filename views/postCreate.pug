extends layout

block content
  h1= title

  if user
    form(action='' method='POST')
      label(for='title') Title:
      input(type='text' name='title' value=(formData ? formData.title : ''))
      label(for='message') Message:
      textarea(type='textarea' name='message' value=(formData ? formData.message : ''))
      button(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg

  else
    p You must log in to create a post.
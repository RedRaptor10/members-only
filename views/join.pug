extends layout

block content
  h1= title
  if !user
    p You are not logged in.
  else if user.status=='Avenger' && !joined
    p You are already an Avenger.
  else if joined
    p You are now an Avenger.
  else
    form(action="" method="POST")
      label(for="password")
      input(type="text" name="password")
      button(type="submit") Submit

    if errors
        ul
        for error in errors
            li!= error.msg
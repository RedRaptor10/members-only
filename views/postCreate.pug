extends layout

block content
  h1= title
  if user
    form.form.form-create-post(action='' method='POST')
      div.form-group
        label(for='title') Title:
      div.form-group
        input(type='text' name='title' value=(formData ? formData.title : ''))
      div.form-group
        label(for='message') Message:
      div.form-group
        textarea(type='textarea' name='message' value=(formData ? formData.message : ''))
      if errors
        ul.form-errors
          for error in errors
            li!= error.msg
      div.form-group.form-btn-container
        button.form-btn(type='submit') Submit
  else
    p.user-msg You must log in to create a post.
extends layout

block content
  form.log-in-form(action='' method='POST')
    label(for='username') Username:
    input(type='text' name='username' value=(formData ? formData.username : ''))
    label(for='password') Password:
    input(type='password' name='password')
    button.submit-btn(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg